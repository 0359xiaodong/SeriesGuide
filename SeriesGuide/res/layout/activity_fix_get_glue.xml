<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_marginTop="@dimen/large_padding"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textViewFixGetGlueHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="@string/select_show"
            android:textAppearance="?attr/textAppearanceSgXLargeLight" />

        <TextView
            android:id="@+id/textViewSelectedShowHeader"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFixGetGlueHeader"
            android:layout_marginRight="@dimen/large_padding"
            android:ellipsize="end"
            android:paddingLeft="@dimen/default_padding"
            android:text="@string/check_into"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSelectedShowValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFixGetGlueHeader"
            android:layout_toRightOf="@+id/textViewSelectedShowHeader"
            android:paddingRight="@dimen/default_padding"
            android:text="@string/no_selection" />

        <include
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textViewSelectedShowHeader"
            android:layout_marginTop="@dimen/large_padding"
            layout="@layout/divider_horizontal" />

        <ListView
            android:id="@+id/listViewGetGlueResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider1"
            tools:ignore="NestedWeights" >
        </ListView>
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonDiscard"
            style="@style/Widget.SeriesGuide.Button.Borderless.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/discard" />

        <include
            android:layout_width="1dp"
            android:layout_height="match_parent"
            layout="@layout/divider_vertical" />

        <Button
            android:id="@+id/buttonSaveSelection"
            style="@style/Widget.SeriesGuide.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_selection"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</LinearLayout>