<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episodedetails_root"
    style="@style/ScrollingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/textViewEpisodeDetailsShowName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/default_padding"
        android:background="@drawable/list_selector_holo_dark"
        android:nextFocusDown="@+id/checkinButton"
        android:nextFocusLeft="@+id/textViewEpisodeDetailsShowName"
        android:nextFocusRight="@+id/textViewEpisodeDetailsShowName"
        android:text="@string/app_name"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_small" >
    </Button>

    <TextView
        android:id="@+id/TextViewEpisodeTitle"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <LinearLayout
        style="@style/Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/episode_airtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/TextViewEpisodeWatchedState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:lines="1"
            android:paddingLeft="@dimen/default_padding"
            android:scrollHorizontally="true"
            android:text="@string/app_name" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/imagecontainer" />

    <include layout="@layout/episode_meta" >
    </include>

    <include
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/holodivider" >
    </include>

    <include
        android:id="@+id/buttonbar_ref"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        layout="@layout/show_info_buttonbar" />

</LinearLayout>