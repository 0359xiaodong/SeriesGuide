<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/layout_root">
        <TextView
            android:id="@+id/textView1"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_width="wrap_content"></TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/username"
            android:inputType="text"></EditText>
        <TextView
            android:id="@+id/textView2"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_width="wrap_content"></TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/password"
            android:inputType="textPassword"></EditText>
        <CheckBox
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/trakt_createaccount" android:id="@+id/checkNewAccount"></CheckBox>
        <LinearLayout
            android:id="@+id/mailviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content" android:id="@+id/textView3" android:layout_height="wrap_content" android:text="@string/email"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" android:id="@+id/email">
                <requestFocus></requestFocus>
            </EditText>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
