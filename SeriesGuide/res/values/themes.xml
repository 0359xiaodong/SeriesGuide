        <!-- Colors -->
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorPrimaryInverse">@color/text_primary_inverse</item>

        <!-- Text styles -->
        <item name="textAppearanceSg">@style/TextAppearance</item>
        <item name="textAppearanceSgXSmall">@style/TextAppearance.XSmall</item>
        <item name="textAppearanceSgXSmallDim">@style/TextAppearance.XSmall.Dim</item>
