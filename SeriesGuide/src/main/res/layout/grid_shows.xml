    style="@style/Widget.SeriesGuide.GridSelectorTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="@bool/gridClipToPadding"
    android:paddingTop="@dimen/grid_topbottom_padding"
    android:paddingRight="0dp"
    android:paddingBottom="@dimen/grid_topbottom_padding"
    android:paddingLeft="@dimen/grid_leftright_padding"
    android:columnWidth="@dimen/showgrid_columnWidth"
