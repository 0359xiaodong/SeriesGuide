<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/drawableCardBackground">

    <ImageView
        android:id="@+id/imageViewNowPoster"
        android:layout_width="68dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/default_padding"
        android:contentDescription="@string/description_poster"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/textViewNowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewActivityShow"
        android:layout_toRightOf="@+id/imageViewNowPoster"
        android:paddingTop="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Somewhere in the middle of the park"
        android:textAppearance="@style/TextAppearance.Subhead" />

    <TextView
        android:id="@+id/textViewNowDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNowTitle"
        android:layout_toRightOf="@+id/imageViewNowPoster"
        android:paddingTop="@dimen/inline_padding"
        android:paddingRight="@dimen/default_padding"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="8:00 PM | Aug 17\nShowtime"
        android:textAppearance="@style/TextAppearance.Body.Dim" />

    <TextView
        android:id="@+id/textViewNowTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageViewNowPoster"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="2 hours ago"
        android:textAppearance="@style/TextAppearance.Caption.Dim" />

</RelativeLayout>
