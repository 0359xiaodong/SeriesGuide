<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Widget styles -->
    <style name="Widget"/>

    <style name="Widget.SeriesGuide" parent="Widget"/>

    <!-- Buttons -->
    <style name="Widget.SeriesGuide.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_sg</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless">
        <item name="android:background">@drawable/list_selector_sg</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Small.Highlight">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- ProgressBar -->
    <!-- pre v11 -->
    <style name="ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_sg</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Page">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Page.Centered">
    </style>

</resources>